@{
    ViewData["Title"] = "Tasks";
}

@model Mission08_Group1_2.Models.TaskAddition

<!-- Form to input the tasks -->

<h3>Enter a Task</h3>

<div>
    <form method="post">
        <div asp-validation-summary="All"></div>
        <label hidden asp-for="TaskId"></label>
        <input type="hidden" asp-for="TaskId" />

        <label asp-for="Task">Task</label>
        <input asp-for="Task" /><br />

        <label asp-for="DueDate">Due Date</label>
        <input asp-for="DueDate" type="date" /><br />

        <label asp-for="Quadrant"></label>
        <select asp-for="Quadrant">
            <option value=1>1 - Important / Urgent</option>
            <option value=2>2 - Important / Not Urgent</option>
            <option value=3>3 - Not Important / Urgent</option>
            <option value=4>4 - Not Important / Not Urgent</option>
        </select><br />

        <label asp-for="CategoryID">Category</label>
        <select asp-for="CategoryID">
            <option value="">Select a Category</option>
            @foreach (Category c in ViewBag.Categories)
            {
                <option value="@c.CategoryID">@c.CategoryName</option>
            }
        </select><br />

        <label asp-for="Completed"></label>
        <select asp-for="Completed">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select><br />

        <button type="submit">Submit</button>
    </form>
</div>


